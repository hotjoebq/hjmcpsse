{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: MCP Server",
            "type": "python",
            "request": "launch",
            "module": "hjmcpsse",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": []
        },
        {
            "name": "Python: MCP Server Debug",
            "type": "python",
            "request": "launch",
            "module": "hjmcpsse",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "LOG_LEVEL": "DEBUG"
            },
            "args": ["--log-level", "DEBUG"]
        }
    ]
}
